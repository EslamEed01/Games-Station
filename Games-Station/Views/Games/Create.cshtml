@model CreateGameFormVM

@{
	ViewData["Title"] = "Add Game";
}

<h4>
	<i class="bi bi-plus-circle-fill"></i>
	Add New Game
</h4>

<form asp-controller="Games" method="post" enctype="multipart/form-data">
	<div class="row">
		<div class=" col-md-6">
			<div class="form-group">
				<label asp-for="Name" class="form-label mt-4">  </label>
				<input type="text" class="form-control" asp-for="Name">
				<span asp-validation-for="Name" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="CategoriesId" class="form-label mt-4"> </label>
				<select class="form-select" asp-for="CategoriesId" asp-items="Model.Categories"
				data-placeholder="Select category " data-minimum-results-for-search="infinity">

					<option value=""></option>

				</select>
				<span asp-validation-for="CategoriesId" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="SelectedDevices" class="form-label mt-4"> </label>
				<select asp-for="SelectedDevices" class="form-select" asp-items="Model.Devices" multiple
						data-placeholder="Select Device ">
					<option></option>
				</select>
				<span asp-validation-for="SelectedDevices" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Description" class="form-label mt-4"> </label>
				<textarea asp-for="Description" class=" form-control " placeholder="Description"></textarea>
				<span asp-validation-for="Description" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="Cover" class="form-label mt-4">  </label>
				<input type="file" class="form-control" asp-for="Cover"
					   data-rule-extension="@FileSettings.AllowedFileExtension.Replace(".",string.Empty)"
					   data-msg-extension="Not Allowed Extension"
					   data-rule-filesize="@FileSettings.MaxFileSizeINByte"
					   data-msg-filesize="Maximum allowed size is @FileSettings.MaxFileSizeINByte MB">
				<small class="form-text text-muted">Only @FileSettings.AllowedFileExtension are allowed with max size @(FileSettings.MaxFileSizeINByte)MB  <br /></small>
				<span asp-validation-for="Cover" class="text-danger" d-block></span>
			</div>


			<button type="submit" class="btn btn-light text-black mt-4"> Save </button>
		</div>
		<div class=" col-md-6 d-flex justify-content-center pt-5 overflow-hidden">
			<img class="cover-preview d-none" alt=" Cover" />
		</div>
	</div>
</form>

@section Scripts{
	<partial name="_ValidationScriptsPartial" />
    <script src="~/js/filesize-validator.js" asp-append-version="true"></script>
	<script src="~/js/games-form.js" asp-append-version="true"></script>
	


}